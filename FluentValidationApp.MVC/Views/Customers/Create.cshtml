@model FluentValidationApp.MVC.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
	            <label asp-for="Age" class="control-label"></label>
	            <input asp-for="Age" class="form-control" />
	            <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
	            <label asp-for="BirthDate" class="control-label"></label>
                <input type="date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <hr/>
			<h1>Addresses</h1>
            @for(int i = 0; i < 2; i++)
            {
	            <div class="form-group">
		            <label asp-for="Addresses[i].City" class="control-label"></label>
					<input asp-for="Addresses[i].City" class="form-control" />
					<span asp-validation-for="Addresses[i].City" class="text-danger"></span>
	            </div>
	            <div class="form-group">
					<label asp-for="Addresses[i].Town" class="control-label"></label>
					<input asp-for="Addresses[i].Town" class="form-control" />
					<span asp-validation-for="Addresses[i].Town" class="text-danger"></span>
	            </div>
	            <div class="form-group">
					<label asp-for="Addresses[i].District" class="control-label"></label>
					<input asp-for="Addresses[i].District" class="form-control" />
					<span asp-validation-for="Addresses[i].District" class="text-danger"></span>
	            </div>
	            <div class="form-group">
					<label asp-for="Addresses[i].Street" class="control-label"></label>
					<input asp-for="Addresses[i].Street" class="form-control" />
					<span asp-validation-for="Addresses[i].Street" class="text-danger"></span>
	            </div>
	            <div class="form-group">
					<label asp-for="Addresses[i].BuildNumber" class="control-label"></label>
					<input asp-for="Addresses[i].BuildNumber" class="form-control" />
					<span asp-validation-for="Addresses[i].BuildNumber" class="text-danger"></span>
	            </div>
	            <div class="form-group">
		            <label asp-for="Addresses[i].ZipCode" class="control-label"></label>
		            <input asp-for="Addresses[i].ZipCode" class="form-control" />
		            <span asp-validation-for="Addresses[i].ZipCode" class="text-danger"></span>
	            </div>
	            <hr/>
            }
            <div class="form-group">
	            <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
